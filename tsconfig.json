{
  "include": ["src/**/*"],
  "compilerOptions": {
    "module": "esnext",
    "target": "esnext",
    "lib": ["esnext"],
    "types": ["bun-types"],
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "esModuleInterop": true,
    "inlineSourceMap": true,
    "noUncheckedIndexedAccess": true,
    "inlineSources": true,
    "strict": true,
    "rootDir": "src/",
    "outDir": "dist/",
    "baseUrl": "src/",
    "allowJs": true,
    "paths": {
      "/*": ["*"]
    },

    "moduleResolution": "node",
    "moduleDetection": "force",

    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  }
}
